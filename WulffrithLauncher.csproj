<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>WulffrithLauncher.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="WulffrithLauncher.ico" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MyLibrary">
      <HintPath>..\MyLibrary\bin\Debug\net8.0\MyLibrary.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
